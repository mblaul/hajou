{
  "editor.formatOnSave": true,
  "rubyLsp.bundleGemfile": "./Gemfile",
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.useTabStops": false,
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
    "editor.formatOnSave": true
  },
  "files.associations": {
    "*.html.erb": "erb"
  }
}
