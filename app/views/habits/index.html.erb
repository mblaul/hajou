<div class="py-4 flex flex-col gap-4">
  <%= render 'partials/page_header' do %>
    Habits
  <% end %>

  <%= render 'partials/button' do %>
    <%= link_to 'Add New Habit', 'habits/new'%>
  <% end %>
  
  <div class="flex flex-col gap-2">
    <% @habits.each do |habit|%>
      <%= render partial: 'partials/card', locals: { item: habit } %>
    <% end %>
  </div>

</div>
