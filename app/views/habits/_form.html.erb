<%= form_with model: @habit do |form|%>
  <% %i(name description).each do |field_name|%>
    <div>
      <%= form.label field_name %>
      <%= form.text_field field_name %>
    </div>
  <% end %>
  <%= form.submit "Submit", class: "inline rounded text-stone-300 bg-stone-600 p-2 border-2 border-solid border-stone-500 w-auto" %>
<% end %>