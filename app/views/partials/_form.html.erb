<div class="md:w-2/3 m-auto" data-visibility-target="form" <%= @hide ? 'hidden' : '' %>>
  <div class="pb-4">
    <%= render 'partials/page_header' do %>
      <%= @form_name %>
    <% end %>
  </div>
  <%= form_with model: @item do |form| %>
    <% @form_fields.map do |form_field|%>
      <div>
        <%= form.label form_field.name %>
        <%= form.send(form_field.type, form_field.name, *form_field.options)%>
      </div>
    <% end %>
    <%= form.submit "Submit",
      class: "inline rounded text-stone-300 bg-stone-600 p-2 border-2 border-solid border-stone-500 w-auto"
    %>
  <% end %>
</div>
