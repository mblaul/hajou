<div class="flex flex-col justify-center items-center">
  <%= render 'timer' %>
  <%= form_with model: @habit_entry, class: "w-full flex flex-col gap-2" do |form|%>
    <%= form.label :rating %>
    <%= form.select :rating, HabitEntryStatuses.to_tuples, {}, class: "text-black" %>
    <%= form.label :notes %>
    <%= form.text_area :notes, class: "text-black" %>
    <%= form.submit "Submit", class: "inline rounded text-stone-300 bg-stone-600 p-2 border-2 border-solid border-stone-500 w-auto" %>
  <% end %>
</div>